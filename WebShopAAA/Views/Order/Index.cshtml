@model List<OrderDetails>


<div class="row justify-content-center pt-3">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Orders</h1></div>

            <div class="card-body ">
                <a asp-controller="Order" asp-action="Test" class="btn btn-primary">
                    Test Order
                </a>
                <hr />
                @if (Model.Count != 0)
                {
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Picked</th>
                                <th>Total</th>
                                <th>CreateAt</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.IsPicked</td>
                                    <td>@item.Total</td>
                                    <td>@item.CreateAt</td>
                                    <td>
                                        @if(item.IsPicked != true)
                                        {
                                            <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-success">Pick List</a>
                                        }else
                                        {
                                            <a class="btn btn-success disabled">Pick List</a>
                                        }

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>        