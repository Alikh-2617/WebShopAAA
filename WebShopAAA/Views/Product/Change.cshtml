<div class="row justify-content-center pt-3">
    <div class="col-md-8">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Change Category</h1></div>

            <div class="card-body ">
                @ViewBag.Name
                <hr />
                <form asp-controller="Product" asp-action="Change" method="post" asp-route-id="@ViewBag.Id">
                    
                    <div class="row mb-3">
                        <label class="col-md-4 col-form-label text-md-end">Categorys</label>
                        <div class="col-md-6">
                            @*<select name="cat" asp-items="@ViewBag.Category">Select a Category</select>*@
                            @*<select id="city">
                            @foreach (var item in ViewBag.Test as IList<City>)
                            {
                            <option value="@item.Id">@item.Name</option>
                            }
                            </select>*@
                            @*<select id="categorys">
                            <option value="">Select a Category</option>
                            @foreach (var item in Model as IList<ProductCategory>)
                            {
                            <option value="@item.Id">@item.Name</option>
                            }
                            </select>*@
                            <select name="categorys" id="categorys">
                            <option value="">Select a Category</option>
                                @foreach (var item in ViewBag.Category)
                                {
                                    @if (ViewBag.cat == item.Id)
                                    {
                                        <option selected value="@item.Id">@item.Name</option>
                                    }else
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <input type="submit" class="btn btn-success" value="Save" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>        