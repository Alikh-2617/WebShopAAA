@model List<Product>

<div class="row justify-content-center pt-3">
    <div class="col">
        <div class="card justify-content-center">
            <div class="card-header"><h1>Products</h1></div>

            <div class="card-body ">
                <a asp-action="Create" class="btn btn-primary">Add New</a>
                <hr />
                @if(Model.Count !=0)
                {
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Company</th>
                                <th>Color</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.ModelName</td>
                                        <td>@item.Color</td>
                                        <td>
                                        @foreach (var cat in item.Categorys)
                                        {
                                            <em>@cat.Name</em>
                                        }
                                        </td>
                                        <td>@item.Price</td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-dark">Details</a>
                                            <a asp-action="Change" asp-route-Id="@item.Id" class="btn btn-success">Change Category</a>
                                            <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>        